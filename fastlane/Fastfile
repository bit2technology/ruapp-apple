
lane :ci do |options|
  danger
  test
end

lane :test do |options|
  run_tests(scheme: 'RUappShared-iOS', output_style: 'raw', output_types: nil)
end

lane :buildnum do |options|
  patch = Time.now.getutc.to_i
  minor = patch / 256
  major = minor / 256
  build_number = "#{major}.#{minor % 256}.#{patch % 256}"
  increment_build_number(build_number: build_number)
  commit_version_bump(message: 'Increase Build Number.', xcodeproj: 'RUapp.xcodeproj')
end
